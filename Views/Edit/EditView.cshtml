@model Laboration2MVC.Models.EditViewModel

@{
    ViewData["Title"] = "Edit View";
    TempData["Message"] = "Database Operations status";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditView</title>
    <script>
        function removeSelectedOption() {
            var dropdown = document.getElementById("originalCategoryDropdown");
            var selectedOption = dropdown.options[dropdown.selectedIndex];

            if (selectedOption.value !== "") {
                selectedOption.remove(); // ✅ Remove the selected option from the dropdown
            }
        }
    </script>
</head>
<body>

    <h4>Edit Category</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditView" method="post">
                <!-- ✅ Dropdown for Selecting an Original Category -->
                <div class="form-group">
                    <label for="originalCategoryDropdown">Select Original Category:</label>
                    <select id="originalCategoryDropdown" name="CustomCategory.OriginalCategory" class="form-control" onchange="removeSelectedOption()">
                        <option value="" disabled selected>-- Choose a Category --</option>
                        @foreach (var reference in Model.ReferenceList)
                        {
                            <option value="@reference.Reference">@reference.Reference</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="CustomCategory.NewCategory" class="control-label"></label>
                    <input asp-for="CustomCategory.NewCategory" class="form-control" required />
                </div>

                <button type="submit" class="btn btn-primary">Save Category</button>
            </form>
        </div>
    </div>

    <a asp-controller="API" asp-action="TransactionView">
        Återvänd till transaktioner
    </a>

</body>
</html>