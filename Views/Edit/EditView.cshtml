@model Laboration2MVC.Models.EditViewModel

@{
    ViewData["Title"] = "Edit View";
    TempData["Message"] = "Database Operations status";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditView</title>
</head>
<body>
    <h4>Tilldela kategori</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditView" method="post">
                <div class="form-group">
                    <label for="originalCategoryDropdown">Välj transaktionsreferens (använd ctrl och klicka på referenserna för att lägga till fler referenser till en kategori):</label>
                    <select id="originalCategoryDropdown" name="CustomCategory.OriginalCategories" class="form-control" multiple size="5">
                        @foreach (var reference in Model.ReferenceList)
                        {
                            <option value="@reference.Reference">@reference.Reference</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="CustomCategory.NewCategory" class="control-label">Kategori</label>
                    <input asp-for="CustomCategory.NewCategory" class="form-control" required placeholder="Ange ny kategori" />
                </div>

                <button type="submit" class="btn btn-primary">Spara</button>
            </form>
        </div>
    </div>

    <a asp-controller="API" asp-action="TransactionView">
        Återvänd till transaktioner
    </a>
</body>
</html>