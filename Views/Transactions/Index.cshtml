@model List<Transaction>

<h2>Transaktioner</h2>

@if (ViewBag.ErrorMessage != null)
{
    <p style="color:red;">@ViewBag.ErrorMessage</p>
}
else if (Model == null || !Model.Any())
{
    <p>Inga transaktioner tillgängliga.</p>
}
else
{
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Bokföringsdatum</th>
            <th>Transaktionsdatum</th>
            <th>Referens</th>
            <th>Belopp</th>
            <th>Saldo</th>
            <th>Kategori</th>
            <th>Redigera</th> <!-- Ny kolumn för redigering -->
        </tr>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.TransactionID</td>
                <td>@t.BookingDate.ToShortDateString()</td>
                <td>@t.TransactionDate.ToShortDateString()</td>
                <td>@t.Reference</td>
                <td>@t.Amount</td>
                <td>@t.Balance</td>
                <td>@t.Category</td>
                <td>
                    <a href="@Url.Action("Edit", "Transaction", new { id = t.TransactionID })">
                        ✏️ Redigera
                    </a>
                </td>
            </tr>
        }
    </table>
}
