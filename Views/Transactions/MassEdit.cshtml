@model List<Transaction>

<h2>Massredigera transaktioner</h2>
<form asp-action="MassEdit" method="post">
    <table border="1">
        <tr>
            <th>Referens</th>
            <th>Belopp</th>
            <th>Nuvarande kategori</th>
            <th>Ny kategori</th>
        </tr>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].Reference</td>
                <td>@Model[i].Amount</td>
                <td>@Model[i].Category</td>
                <td>
                    <input asp-for="@Model[i].Category" />
                    <input type="hidden" asp-for="@Model[i].TransactionID" />
                </td>
            </tr>
        }
    </table>
    <button type="submit">Spara ändringar</button>
</form>
